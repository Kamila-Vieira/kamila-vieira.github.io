{{# each codepoints }}
${{ @key }}: "\\{{ codepoint this }}";
{{/ each }}


{{# each codepoints }}
{{# if ../selector }}
{{ ../selector }}.{{ ../prefix }}-{{ @key }}:before {
{{ else }}
{{ tag }}.{{ ../prefix }}-{{ @key }}:before {
{{/ if }}
    content: ${{ @key }};
}
{{/ each }}