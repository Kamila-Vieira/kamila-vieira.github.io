@font-face {
    font-family: "{{ name }}";
    src: {{{ fontSrc }}};
}

{{# if selector }}
{{ selector }}:before {
{{ else }}
{{ tag }}[class^="{{prefix}}-"]:before, {{ tag }}[class*=" {{prefix}}-"]:before {
{{/ if }}
  font-family: {{ name }};
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

